<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_promociones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alejandrablandon.crepeswaffles.PromocionesActivity"
    android:background="@color/navajowhite"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="350sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/almuerzo2"
            android:id="@+id/iprimera"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/desayuno1"
            android:id="@+id/isegunda"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/helado1"
            android:id="@+id/itercera"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sal1"
            android:id="@+id/icuarta"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/dulce1"
            android:id="@+id/iquinta"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bebida1"
            android:id="@+id/isexta"/>

    </RelativeLayout>

    <Button
        android:layout_marginTop="10sp"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:text="@string/SiFavorito"
        android:id="@+id/Favorite"
        android:layout_gravity="center"
        android:background="@color/brown"
        android:textColor="@color/white" />
    <Button
        android:layout_marginTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NoFavorito"
        android:id="@+id/NoFavorite"
        android:layout_gravity="center"
        android:background="@color/brown"
        android:textColor="@color/white" />

</LinearLayout>
